
    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
          <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Contact Name</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Contact Name" name="contactname" value="<%= contacts.contactname %>" required>
              </div>
              <div class="form-group">
                <label for="CostTextField">Contact Number</label>
                <input type="text" class="form-control" id="CostTextField"
                placeholder="Contact Number" name="contactnumber" value="<%= contacts.contactnumber %>"  required>
              </div>
              <div class="form-group">
                <label for="RatingTextField">Contact Email</label>
                <input type="text" class="form-control" id="RatingTextField"
                placeholder="Contact Email" name="contactemail" value="<%= contacts.contactemail %>"  required>
              </div>

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
               <a href="/contacts/delete/<%= contacts._id %>" class="btn btn-danger">
              <i class="fa fa-trash-o"></i> Delete</a>
              <a href="/contacts" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
            
        </div>
      </div>
    </div>

