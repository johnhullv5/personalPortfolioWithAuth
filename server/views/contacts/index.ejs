
<header>
        <% include ../partials/header.ejs %>
    </header>
      <a href="/contacts/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a Contact</a>
          <br>
          <table class="table table-bordered table-striped table-hover">
            <tr>
              <th class="text-center">Contact Name</th>
              <th class="text-center">Contact Number</th>
              <th class="text-center">Email	Address</th>
              <th class="text-center"></th>
              <th class="text-center"></th>
            </tr>
            <!-- Template Row -->
            <% for (let count = 0; count < contacts.length; count++) { %>
            <tr>
              <td class="text-center"><%= contacts[count].contactname %></td>
              <td class="text-center"><%= contacts[count].contactnumber %></td>
              <td class="text-center"><%= contacts[count].contactemail %></td>
              <td class="text-center">
              <a href="/contacts/<%= contacts[count]._id %>" class="btn btn-primary">
              <i class="fa fa-pencil-square-o"></i> Update</a>
               </td>
              <td class="text-center">
              <a href="/contacts/delete/<%= contacts[count]._id %>" class="btn btn-danger">
              <i class="fa fa-trash-o"></i> Delete</a>
              </td>
            </tr>
            <% } %>
          </table>

     <footer>
        <% include ../partials/footer.ejs %>
    </footer>

